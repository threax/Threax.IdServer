[
  {
    "pathBase": "Client",
    "outDir": ".",
    "copy": [
      "Client/Images/*",
      "Client/favicon.ico"
    ]
  },
  {
    "pathBase": "node_modules/bootstrap/dist/js",
    "outDir": "lib/bootstrap/dist/js",
    "copy": [
      "node_modules/bootstrap/dist/js/bootstrap.min.js"
    ]
  },
  {
    "pathBase": "node_modules/jquery/dist",
    "outDir": "lib/jquery/dist",
    "copy": [
      "node_modules/jquery/dist/jquery.min.js"
    ]
  },
  {
    "outDir": ".",
    "bundle": [
      {
        "input": [
          "wwwroot/lib/bootstrap/dist/css/threax.bootstrap.css"
        ],
        "out": "bundle.min.css",
        "minify": true
      }
    ]
  },
  {
    "outDir": ".",
    "bundle": [
      {
        "input": [
          "wwwroot/lib/jquery/dist/jquery.min.js",
          "wwwroot/lib/bootstrap/dist/js/bootstrap.min.js"
        ],
        "out": "bundle.min.js",
        "minify": true
      }
    ]
  }
]