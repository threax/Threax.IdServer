@model Threax.IdServer.Models.AccountViewModels.LoginViewModel
@inject Threax.IdServer.AppConfig AppConfig

@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <div class="row">
        <div class="col-lg-6">
            <partial name="_ValidationSummary" />
            <h2>
                Login
            </h2>
            <form asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <fieldset>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">Email</label>
                        <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Password"></label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary">Login</button>
                    </div>
                </fieldset>
            </form>
            <p>Don't have an account? <a href="/Account/Register?returnUrl=@System.Net.WebUtility.UrlEncode(Model.ReturnUrl)">Register Now.</a></p>
            @if (AppConfig.AllowResetPassword)
            {
            <a asp-action="ForgotPassword">Forgot Password?</a>
            }
        </div>
    </div>
</div>