{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information"
    }
  },
  "DisplayConfig": {
    "SiteName": "Identity"
  },
  "AppConfig": {
    "ConnectionString": "Data Source=/appdata/idserver.db;",
    "DataProtectionKeysPath": "/appdata/keys/",
    "DetailedErrors": false,
    "ErrorPages": false,
    "AllowApiExplorer": false,
    "UseAssetBundles": true,
    "SigningCredentialCertThumb": "/run/secrets/id.signingcert.p12",
    "FrameAncestors": [ "https://*.dev.threax.com" ]
  },
  "Cors": {
    "UnlimitedAccess": false,
    "AllowedOrigins": [
      "https://appdashboard.dev.threax.com"
    ]
  },
  "JwtAuth": {
    "Authority": "https://id.dev.threax.com"
  }
}
