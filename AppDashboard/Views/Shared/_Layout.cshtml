@inject Threax.ProgressiveWebApp.DisplayConfig config;
<!DOCTYPE html>
<html>
<head>
    <style>html{visibility: hidden;opacity:0;background-color:#222;}</style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppDashboard</title>
    <asset-bundle src="~/bundle.min.css"></asset-bundle>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-brand-app">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@config.SiteName</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Clients">Clients</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ApiResources">Api Resources</a></li>
                    @*}*@
                    @if (User.IsInRole(Threax.AspNetCore.UserBuilder.Entities.AuthorizationAdminRoles.EditRoles))
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="UserRoles">Edit Users</a></li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="userMenu">@User.Identity.Name <span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="userMenu">
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content mt-3">
        @RenderBody()
        <hr />
        <footer>
            <p>AppDashboard</p>
        </footer>
    </div>
    <relogin></relogin>

    <client-config csp-nonce></client-config>
    <token-config csp-nonce></token-config>
    <style>html{visibility: visible;opacity: 1;}</style>
    <asset-bundle src="~/bundle.min.js"></asset-bundle>
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/lib/hr-run.js" asp-append-version="true"></script>
    <threax-csp></threax-csp>
</body>
</html>
