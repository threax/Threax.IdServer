<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AssemblyName>AppDashboard</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>AppDashboard</PackageId>
    <MvcRazorCompileOnPublish>true</MvcRazorCompileOnPublish>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Properties\PublishProfiles\Docker.pubxml" />
    <None Remove="Properties\PublishProfiles\FolderProfile.pubxml" />
    <None Remove="Properties\PublishProfiles\FolderProfile1.pubxml" />
    <None Remove="Properties\PublishProfiles\LocalInstallation.pubxml" />
    <None Remove="Properties\PublishProfiles\WebApps.pubxml" />
  </ItemGroup>

  <ItemGroup>
    <None Update="wwwroot\**\*;build\**\*">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="HtmlRapier.TagHelpers" Version="5.3.0" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.Client" Version="6.0.0" />
    <PackageReference Include="Threax.AspNetCore.IdServerAuth" Version="2.8.2" />
    <PackageReference Include="Threax.AspNetCore.UrlFix" Version="1.1.4" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder" Version="3.2.0" />
    <PackageReference Include="Threax.AspNetCore.Docker.Certs" Version="2.0.0" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.Ext" Version="11.0.0" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="BundlerMinifier.Core" Version="2.6.362" />
  </ItemGroup>
  
</Project>
