<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <UserSecretsId>aspnet-Threax.AppDashboard-27f32ce9-ea0e-4e97-a74d-852cce8b7891</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.1.5" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="3.1.5" />
    <PackageReference Include="HtmlRapier.TagHelpers" Version="8.1.1" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.Client" Version="10.0.0" />
    <PackageReference Include="Threax.AspNetCore.IdServerAuth" Version="3.0.0" GeneratePathProperty="true" />
    <PackageReference Include="Threax.AspNetCore.UrlFix" Version="1.1.4" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder" Version="3.3.0" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder.Entities" Version="5.0.0" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder.Entities.Mvc" Version="6.0.0" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.Ext" Version="14.0.0" />
    <PackageReference Include="Threax.AspNetCore.BuiltInTools" Version="5.3.0" />
    <PackageReference Include="Threax.Extensions.Configuration.SchemaBinder" Version="2.0.0" />
    <PackageReference Include="Threax.AspNetCore.CSP" Version="1.3.0" />
    <PackageReference Include="Threax.DeployConfig" Version="1.0.0-pre01" GeneratePathProperty="true" />
    <PackageReference Include="Threax.ProgressiveWebApp" Version="1.0.0" GeneratePathProperty="true" />
    <PackageReference Include="IdentityModel" Version="4.3.0" />
  </ItemGroup>

  <Target Name="CopyDocs" AfterTargets="Build">
    <Copy SourceFiles="$(PkgThreax_DeployConfig)\lib\netstandard2.0\Threax.DeployConfig.xml" DestinationFolder="$(OutDir)" />
    <Copy SourceFiles="$(PkgThreax_AspNetCore_IdServerAuth)\lib\netstandard2.0\Threax.AspNetCore.IdServerAuth.xml" DestinationFolder="$(OutDir)" />
  </Target>
  
</Project>
